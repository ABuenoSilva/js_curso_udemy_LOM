<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

          <%- include('includes/messages') %>

            <div class="row my-5">

                <div class="col-lg">
                    <h4 class="text-center">Faça seu cadastro</h4>
                    <p>Se você ainda não possui conta, preencha o formulário abaixo</p>
                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                        <div class="mb-3">
                          <label for="email" class="form-label">E-mail</label>
                          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="email@email.com">
                          <div id="emailHelp" class="form-text">Nós não compartilhamos seu e-mail com mais ninguém.</div>
                        </div>
                        <div class="mb-3">
                          <label for="password" class="form-label">Senha</label>
                          <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>                    
                </div>

                <div class="col-sm">
                    <h2 class="text-center">ou</h2>
                </div>

                <div class="col-lg">
                    <h4 class="text-center">Faça seu login</h4>
                    <p>Se você já possui conta, faça o login abaixo</p>
                    <form class="form-login" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                        <div class="mb-3">
                          <label for="emailLog" class="form-label">E-mail</label>
                          <input type="email" class="form-control" id="emailLog" aria-describedby="emailHelp" name="email" placeholder="email@email.com">
                          <div id="emailHelp" class="form-text">Nós não compartilhamos seu e-mail com mais ninguém.</div>
                        </div>
                        <div class="mb-3">
                          <label for="passwordLog" class="form-label">Senha</label>
                          <input type="password" class="form-control" id="passwordLog" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar no sistema</button>
                      </form>                    
                </div>

            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>